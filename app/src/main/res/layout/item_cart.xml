<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="14sp" />

        <!-- Quantity control buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/minusButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/round_delete_24"
                android:scaleType="fitCenter"
                android:background="?android:colorBackground"
                android:padding="4dp"
                android:contentDescription="@string/minus_cart"
                app:tint="?attr/colorOnBackground"/>

            <TextView
                android:id="@+id/quantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24sp"
                android:paddingHorizontal="16dp" />

            <ImageButton
                android:id="@+id/plusButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/round_add_24"
                android:scaleType="fitCenter"
                android:background="?android:colorBackground"
                android:padding="4dp"
                android:contentDescription="@string/plus_cart"
                app:tint="?attr/colorOnBackground" />
        </LinearLayout>
    </LinearLayout>

    <!-- Larger Delete item button -->
    <ImageButton
        android:id="@+id/binButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/delete_cart"
        android:src="@drawable/baseline_delete_outline_24"
        android:scaleType="fitCenter"
        android:layout_gravity="end"
        android:background="?android:colorBackground"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        app:tint="?attr/colorOnBackground" />
</LinearLayout>
